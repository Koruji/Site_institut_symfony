{% extends 'base.html.twig' %}
{% block header %}
    <a href="{{ path('app_admin_dashboard') }}" class="nav-item btn" style="background-color: #FFDAB9;margin-right: 10px;">Menu</a>
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="mb-4 text-center">Création d'un stage</h2>

        <div>
            {{ form_start(form) }}
                {{ form_row(form.libelle) }}
                {{ form_row(form.description) }}
                {{ form_row(form.date_debut) }}
                {{ form_row(form.date_fin) }}
                {{ form_row(form.matieres) }}
            <div class="card border-warning text-center p-2 m-4">
                Pensez à y inscrire des professeurs et stagiaires dans "Gestion des matières et stages".
            </div>

            <button class="btn btn-outline-dark">{{ button_label|default('Créer') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
