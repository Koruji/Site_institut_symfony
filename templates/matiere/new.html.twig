{% extends 'base.html.twig' %}
{% block header %}
    <a href="{{ path('app_admin_dashboard') }}" class="nav-item btn" style="background-color: #FFDAB9;margin-right: 10px;">Menu</a>
{% endblock %}
{% block body %}
    <div class="container">
        <h2 class="mb-4 text-center">Création d'une matière</h2>

        <div>
            {{ form_start(form) }}
                {{ form_row(form.libelle) }}
                {{ form_row(form.description) }}
            <button class="btn btn-outline-dark">{{ button_label|default('Créer') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
