{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2 class="mb-4 text-center">Mes informations</h2>

        <table class="table">
            <tbody>
            <tr>
                <th>Matricule</th>
                <td>{{ professeur.matricule }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ professeur.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ professeur.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ professeur.email }}</td>
            </tr>

            {% if professeur.matiere %}
            <tr>
                {% else %}
            <tr class="table-warning">
                {% endif %}
                <th>Matière enseignée</th>
                <td>{{ professeur.matiere }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_professeur_edit', {'id': professeur.id}) }}" class="btn btn-outline-dark">Modifier</a>
    </div>
    <hr class="m-4">
    <div class="d-flex justify-content-center">
        {{ include('professeur/_delete_form.html.twig') }}
    </div>
{% endblock %}
