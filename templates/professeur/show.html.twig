{% extends 'base.html.twig' %}
{% block header %}
    <a href="{{ path('app_professeur_dashboard') }}" class="nav-item btn" style="background-color: #FFDAB9;margin-right: 10px;">Menu</a>
{% endblock %}
{% block body %}
    <div class="container">
        <h2 class="mb-4 text-center">Mes informations</h2>

        <table class="table">
            <tbody>
            <tr>
                <th>Matricule</th>
                <td>{{ professeur.matricule }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ professeur.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ professeur.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ professeur.email }}</td>
            </tr>

            {% if professeur.matiere %}
            <tr>
                <th>Matière enseignée</th>
                <td>{{ professeur.matiere.libelle }}</td>
            </tr>
                {% else %}
            <tr class="table-warning">
                <th>Matière enseignée</th>
                <td>A définir</td>
            </tr>
                {% endif %}
            </tbody>
        </table>

        <a href="{{ path('app_professeur_edit', {'id': professeur.id}) }}" class="btn btn-outline-dark">Modifier</a>
    </div>
    <hr class="m-4">
    <div class="card border-warning p-2 m-4 text-center">
        Cette action supprimeras définitivement le compte !
    </div>
    <div class="d-flex justify-content-center">
        {{ include('professeur/_delete_form.html.twig') }}
    </div>
{% endblock %}
